<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - Domingo</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light " style="background-color:#F5EFE3;">
        @Html.ActionLink("Domingo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand ml-5"})
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse"></div>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item @ViewBag.HomeActive">
                    @Html.ActionLink("Home", "Index", "Home", new { area = " " }, new { @class = "nav-link" })
                </li>
                <li class="nav-item @ViewBag.JobActive">
                    @Html.ActionLink("Cards", "Index", "Jobcard", new { area = " " }, new { @class = "nav-link" })
                </li>
                <li class="nav-item @ViewBag.InvoiceActive">
                    @Html.ActionLink("Invoices", "Index", "Invoice", new { area = " " }, new { @class = "nav-link" })
                </li>
                <li class="nav-item @ViewBag.EmpActive">
                    @Html.ActionLink("Employee", "Index", "Employee", new { area = " " }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    @*this is the old nav*@
   
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
